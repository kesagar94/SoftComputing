<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="Income"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/etIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="3-100(lakhs)"
        android:inputType="numberDecimal"
        android:padding="10sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvMorgage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="On Road Price Of Vehicle"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/eTMorgage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="1-1000(lakhs)"
        android:inputType="numberDecimal"
        android:padding="10sp" />

    <TextView
        android:id="@+id/tvTenure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="Tenure"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/eTTenure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="1-7(yrs)"
        android:inputType="numberDecimal"
        android:padding="10sp" />

    <Button
        android:id="@+id/bGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="Go" />

</LinearLayout>